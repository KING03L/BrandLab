  "script": {
    "react script test": "jest",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview --port 5173",

    "ship:preflight": "mkdir -p /k/.tmp && export TMPDIR='/k/.tmp' && node scripts/ship-preflight.mjs",
    "ship:functions:deps": "node scripts/install-functions-deps.mjs",
    "ship:git": "node scripts/ship-git.mjs",
    "ship:changelog": "node scripts/ship-changelog.mjs",
    "ship:status:deploying": "node scripts/ship-status.mjs deploying $(node -e \"console.log(require('./.ship-meta.json').tag)\") $(node -e \"console.log(require('./.ship-meta.json').commit)\")",
    "ship:deploy": "firebase deploy --only hosting,functions",
    "ship:status:live": "node scripts/ship-status.mjs live $(node -e \"console.log(require('./.ship-meta.json').tag)\") $(node -e \"console.log(require('./.ship-meta.json').commit)\")",
    "ship:openurl": "node scripts/ship-openurl.mjs",

    "ship": "npm run ship:preflight && npm run build && npm run ship:functions:deps && npm run ship:git && npm run ship:changelog && npm run ship:status:deploying && npm run ship:deploy && npm run ship:status:live && npm run ship:openurl"
  },
  "dependencies": {
    "firebase": "^11.0.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-firebase-hooks": "^5.1.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.1",
    "vite": "^5.4.8"
  }
}